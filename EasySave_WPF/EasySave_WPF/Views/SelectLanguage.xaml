<Window x:Class="EasySave_WPF.Views.SelectLanguage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySave_WPF.Views"
        mc:Ignorable="d"
        Title="SelectLanguage" Height="450" Width="800">
    <Grid>
        <Label Content="Select language:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="LanguageComboBox" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem IsSelected="True">English</ComboBoxItem>
            <ComboBoxItem>Français</ComboBoxItem>
        </ComboBox>

    </Grid>
</Window>
