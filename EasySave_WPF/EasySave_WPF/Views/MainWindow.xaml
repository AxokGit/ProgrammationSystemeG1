<Window x:Class="EasySave_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySave_WPF"
        xmlns:language="clr-namespace:EasySave_WPF.Languages"
        mc:Ignorable="d"
        Title="EasySave" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="{x:Static language:lang.backupwork_tabname}">
                <Grid Background="#FFE5E5E5">
                    <TabControl>
                        <TabItem Header="{x:Static language:lang.run_backupwork_tabname}">
                            <Grid Background="#FFE5E5E5">
                                <ListView x:Name="BackupWorkListView" Margin="0,0,0,145" Grid.ColumnSpan="2">
                                    <ListView.View>
                                        <GridView>
                                            <GridView.Columns>
                                                <GridViewColumn Header="Name" Width="Auto">
                                                    <GridViewColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <CheckBox Content="{Binding Name}"/>
                                                        </DataTemplate>
                                                    </GridViewColumn.CellTemplate>
                                                </GridViewColumn>
                                                <GridViewColumn Header="Source Folder" Width="Auto" DisplayMemberBinding="{Binding SrcFolder}"/>
                                                <GridViewColumn Header="Destination Folder" Width="Auto" DisplayMemberBinding="{Binding DstFolder}"/>
                                                <GridViewColumn Header="Type" Width="Auto" DisplayMemberBinding="{Binding Type}"/>
                                            </GridView.Columns>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </Grid>
                        </TabItem>
                        <TabItem Header="{x:Static language:lang.edit_backupwork_tabname}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*" />
                                    <RowDefinition Height="1*" />
                                    <RowDefinition Height="1*" />
                                </Grid.RowDefinitions>
                            </Grid>
                        </TabItem>
                        <TabItem Header="{x:Static language:lang.create_backupwork_tabname}">
                            <UniformGrid Columns="5">
                                <DockPanel>
                                    <Label Content="{x:Static language:lang.id_backupwork}"/>
                                    <TextBox Text="TextBox" TextWrapping="Wrap" Width="100" Height="20" Margin="-70,-290,0,0"/>
                                </DockPanel>
                                <DockPanel>
                                    <Label Content="{x:Static language:lang.name_backupwork}"/>
                                    <TextBox Text="TextBox" TextWrapping="Wrap" Width="100" Height="20" Margin="-85,-290,0,0"/>
                                </DockPanel>
                                <DockPanel>
                                    <Label Content="{x:Static language:lang.sourcefolder_backupwork}"/>
                                    <TextBox Text="TextBox" TextWrapping="Wrap" Width="100" Height="20" Margin="-130,-290,0,0"/>
                                </DockPanel>
                                <DockPanel>
                                    <Label Content="{x:Static language:lang.destinationfolder_backupwork}"/>
                                    <TextBox Text="TextBox" TextWrapping="Wrap" Width="100" Height="20" Margin="-150,-290,0,0"/>
                                </DockPanel>
                                <DockPanel>
                                    <Label Content="{x:Static language:lang.type_backupwork}"/>
                                    <TextBox Text="TextBox" TextWrapping="Wrap" Width="100" Height="20" Margin="-80,-290,0,0"/>
                                </DockPanel>
                            </UniformGrid>
                        </TabItem>
                        <DataGrid/>
                    </TabControl>
                </Grid>
            </TabItem>
            <TabItem Header="{x:Static language:lang.log_tabname}">
                <Grid Background="#FFE5E5E5">
                    <TabControl>
                        <TabItem Header="TODO">
                            <Grid Background="#FFE5E5E5"/>
                        </TabItem>
                        <TabItem Header="TODO">
                            <Grid Background="#FFE5E5E5"/>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
            <TabItem Header="{x:Static language:lang.log_tabname}">
                
            </TabItem>
        </TabControl>

    </Grid>
</Window>
