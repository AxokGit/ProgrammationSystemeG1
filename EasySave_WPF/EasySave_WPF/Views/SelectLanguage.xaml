<Window x:Class="EasySave_WPF.Views.SelectLanguage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySave_WPF.Views"
        mc:Ignorable="d"
        Closing="Window_Closing"
        Title="EasySave" Height="284" Width="451">
    <Grid Margin="0,0,0,3">
        <Label Name="SelectLangLabel"  Content="Select language :" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="LanguageComboBox" HorizontalAlignment="Center" Margin="0,41,0,0" VerticalAlignment="Top" Width="120">
        </ComboBox>
        <Button Name="OkButton" Content="OK" HorizontalAlignment="Center" Margin="0,82,0,0" VerticalAlignment="Top" Height="21" Width="120" RenderTransformOrigin="0.508,0.478" Click="Button_Click"/>

    </Grid>
</Window>
