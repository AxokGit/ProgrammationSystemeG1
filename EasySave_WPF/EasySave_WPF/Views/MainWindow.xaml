<Window x:Class="EasySave_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySave_WPF"
        xmlns:language="clr-namespace:EasySave_WPF.Languages"
        mc:Ignorable="d"
        Title="EasySave" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="{x:Static language:lang.backupwork_tabname}">
                <Grid Background="#FFE5E5E5">
                    <TabControl>
                        <TabItem Header="{x:Static language:lang.run_backupwork_tabname}">
                            <Grid Background="#FFE5E5E5">
                                <ListView x:Name="BackupWorkRunListView" Margin="0,0,0,52">
                                    <ListView.View>
                                        <GridView>
                                            <GridView.Columns>
                                                <GridViewColumn Header="Name" Width="Auto">
                                                    <GridViewColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <CheckBox Content="{Binding Name}"/>
                                                        </DataTemplate>
                                                    </GridViewColumn.CellTemplate>
                                                </GridViewColumn>
                                                <GridViewColumn Header="Source Folder" Width="Auto" DisplayMemberBinding="{Binding SrcFolder}"/>
                                                <GridViewColumn Header="Destination Folder" Width="Auto" DisplayMemberBinding="{Binding DstFolder}"/>
                                                <GridViewColumn Header="Type" Width="Auto" DisplayMemberBinding="{Binding Type}"/>
                                            </GridView.Columns>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                                <Button Content="Run" HorizontalAlignment="Left" Margin="0,331,0,0" VerticalAlignment="Top"/>
                            </Grid>
                        </TabItem>
                        <TabItem Header="{x:Static language:lang.edit_backupwork_tabname}">
                            <Grid Background="#FFE5E5E5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="767*"/>
                                    <ColumnDefinition Width="21*"/>
                                </Grid.ColumnDefinitions>
                                <ListView x:Name="BackupWorkEditListView" Margin="0,0,0,168" Grid.ColumnSpan="2">
                                    <ListView.View>
                                        <GridView>
                                            <GridView.Columns>
                                                <GridViewColumn Header="Name" Width="Auto">
                                                    <GridViewColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <CheckBox Content="{Binding Name}"/>
                                                        </DataTemplate>
                                                    </GridViewColumn.CellTemplate>
                                                </GridViewColumn>
                                                <GridViewColumn Header="Source Folder" Width="Auto" DisplayMemberBinding="{Binding SrcFolder}"/>
                                                <GridViewColumn Header="Destination Folder" Width="Auto" DisplayMemberBinding="{Binding DstFolder}"/>
                                                <GridViewColumn Header="Type" Width="Auto" DisplayMemberBinding="{Binding Type}"/>
                                            </GridView.Columns>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                                <Button Content="Edit" HorizontalAlignment="Left" Margin="0,331,0,0" VerticalAlignment="Top" Click="Button_Click"/>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Create">
                            <Grid Background="#FFE5E5E5">
                                <ListView x:Name="CreateBackupWork" Margin="0,0,0,52">
                                    <ListView.View>
                                        <GridView>
                                            <GridView.Columns>
                                                <GridViewColumn Header="Name" Width="Auto">
                                                    <GridViewColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <CheckBox Content="{Binding Name}"/>
                                                        </DataTemplate>
                                                    </GridViewColumn.CellTemplate>
                                                </GridViewColumn>
                                                <GridViewColumn Header="Source Folder" Width="Auto" DisplayMemberBinding="{Binding SrcFolder}"/>
                                                <GridViewColumn Header="Destination Folder" Width="Auto" DisplayMemberBinding="{Binding DstFolder}"/>
                                                <GridViewColumn Header="Type" Width="Auto" DisplayMemberBinding="{Binding Type}"/>
                                            </GridView.Columns>
                                        </GridView>
                                       </ListView.View>
                                </ListView>
                                <Button Content="Create" Margin="650,280,20,60" Click="Create_Click"/>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
            <TabItem Header="{x:Static language:lang.log_tabname}">
                <Grid Background="#FFE5E5E5">
                    <TabControl>
                        <TabItem Header="TODO">
                            <Grid Background="#FFE5E5E5"/>
                        </TabItem>
                        <TabItem Header="TODO">
                            <Grid Background="#FFE5E5E5"/>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
            <TabItem Header="{x:Static language:lang.settings_tabname}">
                <Grid Background="#FFE5E5E5">
                    <Label Content="{x:Static language:lang.language_settings}" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                    <ComboBox Name="LanguageSettingsComboBox" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top" Width="120"/>
                    <Label Content="{x:Static language:lang.format_settings}" HorizontalAlignment="Left" Margin="10,63,0,0" VerticalAlignment="Top"/>
                    <ComboBox Name="LogFormatSettingsComboBox" HorizontalAlignment="Left" Margin="10,89,0,0" VerticalAlignment="Top" Width="120"/>
                    <Button Content="{x:Static language:lang.save_settings}" HorizontalAlignment="Left" Margin="10,125,0,0" VerticalAlignment="Top" Click="ButtonClickSaveSettings"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
